<div class="banner-form" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.arts-in-the-city.com/wp-content/uploads/2022/01/salle-de-cinema-le-cinema-de-personne-1320.png);">
  <div class="form-card">
    <h1 class="text-center">Créer une liste</h1>
    <%= simple_form_for @list do |f| %>
      <div class="p-3">
        <%= f.input :name, label:"Nom", placeholder:"Nom de votre liste", require:true %>
      </div>
      <div class="p-3">
        <p>Choisir une image</p>
        <div class="bg-light border">
        <%= f.input :picture, as: :file %>
        </div>
      </div>
      <div class="p-3">
        <%= f.submit "Créer une liste", class: "btn btn-flat" %>
      </div>
    <% end %>
  </div>
</div>
